pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Set up Node') {
            steps {
                sh 'node -v && npm -v'
            }
        }

        stage('Install dependencies') {
            steps {
                dir('express-app') {
                    sh 'npm install'
                }
            }
        }

        stage('Restart Express app (pm2)') {
            steps {
                dir('express-app') {
                    sh 'pm2 start "npm start" --name express-app || pm2 restart express-app'
                    sh 'pm2 save'
                }
            }
        }
    }
}
